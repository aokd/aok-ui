$page-width = 100vw
$header-height = 80px
$page-padding = 30px
$header-gap = 10px
$content-top = $header-height + $header-gap 
    
menuItem()
  display block
  overflow hidden
  text-overflow ellipsis

  a
    display block
    height 40px
    line-height 40px
    padding-left 30px
    color $brand10
    transition all .3s ease

  &:hover, &.is-active
    background-color $brand1
    a
      color dark($brand10)

html, body
  width 100vw
  height 100vh
  font-size -apple-system, BlinkMacSystemFont, Helvetica Neue, PingFang SC, Microsoft YaHei, Source Han Sans SC, Noto Sans CJK SC, WenQuanYi Micro Hei, sans-serif
  overflow auto hidden

.page-wrapper
  position relative
  width $page-width
  height 100vh
  margin 0 auto
  padding 0
  overflow hidden

.header
  display flex
  justify-content space-between
  align-items center
  width $page-width
  height $header-height
  padding 0 $page-padding
  background $brand10
  color $white
  box-sizing border-box

  .logo
    font-size 32px
    font-family 'Merienda One', Helvetica, sans-serif
    font-weight 600

  .link-group
    > a
      position relative
      display inline-block
      font-size 16px
      line-height 1.8
      color $brand3
      transition all .3s ease
      &::after
        position absolute
        content ''
        width 100%
        height 1px
        left 0
        bottom 0
        background $white
        transform scale(0)
        transition all .3s ease
      &:hover
        color $white
        &::after
          transform scale(1)
      & + a
        margin-left 20px

.main-wrapper
  display flex
  height "calc(100vh - %s)" % $content-top
  padding-top $header-gap

.navbar
  flex none
  width 240px
  height 100%
  border-right 1px solid $brand3
  color rgba(0, 0, 0, 0.65)
  overflow hidden auto
  
.content
  flex: 1
  height 100%
  padding 0 0 0 40px
  overflow hidden auto

.nav-item
  menuItem()

.group-title
  padding 8px 16px 8px 60px
  color $text-minor